                            <mrow>\lim\limits_{x\to-2}\fe{g}{x}&amp;=\infty&amp;\fe{g}{0}&amp;=4</mrow>
                            <mrow>\lim\limits_{x\to-\infty}\fe{g}{x}&amp;=\infty&amp;\fe{g}{3}&amp;=-2</mrow>
                            <mrow>&amp;&amp;\fe{g}{6}&amp;=0</mrow>
