            <solution>
                <p><md>
                <mrow>\fe{\fd{g}}{t}&amp;=\lzoo{t}{\frac{t+9}{t^3}}</mrow>
                <mrow>&amp;=\frac{1\cdot t^3-(t+9)\cdot3t^2}{t^6}</mrow>
                <mrow>&amp;=\frac{t^3-3t^3-27t^2}{t^6}</mrow>
                <mrow>&amp;=\frac{-2t^3-27t^2}{t^6}</mrow>
                <mrow>&amp;=\frac{-2t-27}{t^4}</mrow>
                <mrow>\fe{\sd{g}}{t}&amp;=\frac{-2\cdot t^4-(-2t-27)\cdot4t^3}{t^8}</mrow>
                <mrow>&amp;=\frac{-2t^4+8t^4+108t^3}{t^8}</mrow>
                <mrow>&amp;=\frac{6t^4+108t^3}{t^8}</mrow>
                <mrow>&amp;=\frac{6t+108}{t^5}</mrow>
                <mrow>&amp;=\frac{6(t+18)}{t^5}</mrow>
