                        <row>
                            <cell><m>0.7778</m></cell>
                            <cell><m>299{,}999</m></cell>
                        </row>
                        <row bottom="major">
                            <cell><m>0.77778</m></cell>
                            <cell><m>2{,}999{,}999.9</m></cell>
